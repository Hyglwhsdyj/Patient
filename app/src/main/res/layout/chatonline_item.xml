<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_10"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dimens_12"
            android:paddingBottom="@dimen/dimens_12"
            android:paddingLeft="@dimen/dimens_15"
            android:paddingRight="@dimen/dimens_15">

            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/dimens_20"
                android:text="订单号：4584242"
                android:textColor="#ff999999"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-01-08 16:20:10"
                android:textColor="#ff999999"
                android:textSize="11sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_1"
            android:background="@color/color_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimens_20"
                android:paddingBottom="@dimen/dimens_22"
                android:paddingLeft="@dimen/dimens_15"
                android:paddingRight="@dimen/dimens_15"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="@dimen/dimens_50"
                    android:layout_height="@dimen/dimens_50"
                    android:src="@mipmap/ic_launcher"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dimens_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="徐建龙"
                            android:textColor="@color/color_main"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="主任医师"
                            android:textColor="@color/color_main"
                            android:textSize="13sp"
                            android:layout_marginRight="@dimen/dimens_8"
                            android:layout_marginLeft="@dimen/dimens_10"/>

                        <TextView
                            android:id="@+id/tv_depart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中医内科"
                            android:gravity="right"
                            android:textSize="@dimen/sp_10"
                            android:background="@drawable/shape_subjects"
                            android:textColor="@color/color_yellow"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_explainState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="24小时内图文、语音、视频咨询问诊服务"
                        android:textColor="#ff666666"
                        android:textSize="13sp"
                        android:layout_marginTop="@dimen/dimens_10"/>

                    <TextView
                        android:id="@+id/tv_info"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="24小时内图文、语音、视频咨询问诊服务"
                        android:textColor="#FF333333"
                        android:textSize="12sp"
                        android:layout_marginTop="@dimen/dimens_10"/>
                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_1"
                android:background="@color/color_line" />
            <LinearLayout
                android:id="@+id/ll_pay"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimens_15"
                android:paddingRight="@dimen/dimens_15"
                android:paddingTop="@dimen/dimens_10"
                android:paddingBottom="@dimen/dimens_10">
                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100/次"
                    android:drawablePadding="@dimen/dimens_6"
                    android:textColor="@color/color_yellow"
                    android:drawableLeft="@mipmap/ic_chatonline_fee"/>
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/tv_toPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去支付"
                        android:textColor="#ffffffff"
                        android:textSize="13sp"
                        android:paddingTop="@dimen/dimens_8"
                        android:paddingBottom="@dimen/dimens_8"
                        android:paddingLeft="@dimen/dimens_16"
                        android:paddingRight="@dimen/dimens_16"
                        android:background="@drawable/shape_add_pratient"/>

                    <TextView
                        android:id="@+id/tv_cancal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff333333"
                        android:textSize="13sp"
                        android:text="取消支付"
                        android:paddingTop="@dimen/dimens_8"
                        android:paddingBottom="@dimen/dimens_8"
                        android:paddingLeft="@dimen/dimens_16"
                        android:paddingRight="@dimen/dimens_16"
                        android:background="@drawable/shape_cancel_order"
                        android:layout_marginLeft="@dimen/dimens_10"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>