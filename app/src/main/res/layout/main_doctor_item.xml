<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimens_20"
        android:paddingBottom="@dimen/dimens_22"
        android:paddingLeft="@dimen/dimens_15"
        android:paddingRight="@dimen/dimens_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dimens_50"
            android:layout_height="@dimen/dimens_50"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimens_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="徐建龙"
                    android:textColor="@color/color_main"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="徐建龙"
                    android:textColor="@color/color_main"
                    android:textSize="13sp"
                    android:layout_marginRight="@dimen/dimens_8"
                    android:layout_marginLeft="@dimen/dimens_10"/>

                <TextView
                    android:id="@+id/tv_depart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中医内科"
                    android:gravity="right"
                    android:textSize="@dimen/sp_10"
                    android:background="@drawable/shape_subjects"
                    android:textColor="@color/color_yellow"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_medicalInstitutions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="医院机构:"
                android:textColor="@color/black_6"
                android:textSize="@dimen/sp_13"
                android:layout_marginTop="@dimen/dimens_8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_marginTop="@dimen/dimens_7">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="擅长："
                    android:textColor="@color/black_6"
                    android:textSize="@dimen/sp_13" />
                <com.ais.patient.widget.FlowGroupView
                    android:id="@+id/mFlowGroupView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimens_7">
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中医内科"
                    android:gravity="right"
                    android:textSize="@dimen/sp_10"
                    android:background="@drawable/shape_subjects"
                    android:textColor="@color/color_yellow"/>
                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="临床经验4年"
                    android:gravity="right"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:textSize="@dimen/sp_10"
                    android:background="@drawable/shape_subjects"
                    android:textColor="@color/color_yellow"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimens_15"
                android:drawablePadding="@dimen/dimens_6">

                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100/次"
                    android:textColor="@color/color_yellow"
                    android:drawableLeft="@mipmap/ic_chat"/>
                <TextView
                    android:id="@+id/tv_choose_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择"
                    android:visibility="gone"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/dimens_15"
                    android:paddingRight="@dimen/dimens_15"
                    android:paddingTop="@dimen/dimens_8"
                    android:paddingBottom="@dimen/dimens_8"
                    android:background="@drawable/shape_add_pratient"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:background="@color/color_line"/>
</LinearLayout>