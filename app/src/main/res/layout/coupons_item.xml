<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_15">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_coupons_bg"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:id="@+id/ll_money"
            android:layout_width="@dimen/dimens_100"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#ffffffff"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textColor="#ffffffff"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_minMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满200使用"
                android:textColor="#ffffffff"
                android:textSize="11sp"
                android:layout_marginTop="@dimen/dimens_10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_30"
            android:layout_toRightOf="@id/ll_money">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册送"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限普通方使用"
                    android:textColor="#ff666666"
                    android:textSize="11sp"
                    android:layout_marginTop="@dimen/dimens_5"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-01-05至2018-08-14"
                    android:textColor="#ff666666"
                    android:textSize="11sp"
                    android:lines="2"
                    android:layout_marginTop="@dimen/dimens_7"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/mCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_marginRight="@dimen/dimens_15"
                android:background="@drawable/shape_coupon_check"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>