<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_main_title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimens_30">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_bg"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/iv_head_icon"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:src="@mipmap/ic_head_icon"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:layout_marginBottom="@dimen/dimens_10">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffffff"
                            android:textSize="15sp"
                            android:text="5555"
                            android:layout_marginLeft="65dp"
                            android:layout_marginRight="@dimen/dimens_8"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/tv_vip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="升级VIP"
                            android:textColor="#ffffc800"
                            android:textSize="11sp"
                            android:drawableLeft="@mipmap/ic_mine_vip"
                            android:drawablePadding="@dimen/dimens_4"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffffff"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="修改个人资料"
                            android:textColor="#ffffffff"
                            android:textSize="10sp"
                            android:drawablePadding="@dimen/dimens_2"
                            android:drawableLeft="@mipmap/ic_edit"
                            android:layout_marginLeft="@dimen/dimens_10"/>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_0"
                android:visibility="gone"
                style="@style/LinearLayoutStyle"
                android:paddingTop="@dimen/dimens_16"
                android:paddingBottom="@dimen/dimens_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的账户"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:drawablePadding="@dimen/dimens_8"
                    android:drawableLeft="@mipmap/ic_mine1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_to"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_1"
                android:background="@color/color_line"/>

            <RelativeLayout
                android:id="@+id/rl_11"
                style="@style/LinearLayoutStyle"
                android:layout_marginTop="@dimen/dimens_0"
                android:paddingTop="@dimen/dimens_16"
                android:paddingBottom="@dimen/dimens_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的健康档案"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:drawablePadding="@dimen/dimens_8"
                    android:drawableLeft="@mipmap/ic_mine12"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_to"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_1"
                android:background="@color/color_line"/>

            <RelativeLayout
                android:id="@+id/rl_1"
                style="@style/LinearLayoutStyle"
                android:paddingTop="@dimen/dimens_16"
                android:layout_marginTop="@dimen/dimens_0"
                android:paddingBottom="@dimen/dimens_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的处方单"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:drawablePadding="@dimen/dimens_8"
                    android:drawableLeft="@mipmap/ic_mine1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_to"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_1"
                android:background="@color/color_line"/>

            <RelativeLayout
                android:id="@+id/rl_8"
                style="@style/LinearLayoutStyle"
                android:layout_marginTop="@dimen/dimens_0"
                android:paddingTop="@dimen/dimens_16"
                android:paddingBottom="@dimen/dimens_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线客服"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:drawablePadding="@dimen/dimens_8"
                    android:drawableLeft="@mipmap/ic_mine8"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_to"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_1"
                android:background="@color/color_line"/>


            <RelativeLayout
                android:id="@+id/rl_3"
                style="@style/LinearLayoutStyle"
                android:paddingTop="@dimen/dimens_16"
                android:paddingBottom="@dimen/dimens_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的关注"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:drawablePadding="@dimen/dimens_8"
                    android:drawableLeft="@mipmap/ic_mine3"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_to"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_1"
                android:background="@color/color_line"/>
            <RelativeLayout
                android:id="@+id/rl_5"
                style="@style/LinearLayoutStyle"
                android:layout_marginTop="@dimen/dimens_0"
                android:paddingTop="@dimen/dimens_16"
                android:paddingBottom="@dimen/dimens_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的优惠券"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:drawablePadding="@dimen/dimens_8"
                    android:drawableLeft="@mipmap/ic_mine5"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_to"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_1"
                android:background="@color/color_line"/>
            <RelativeLayout
                android:id="@+id/rl_6"
                style="@style/LinearLayoutStyle"
                android:paddingTop="@dimen/dimens_16"
                android:paddingBottom="@dimen/dimens_16"
                android:layout_marginTop="@dimen/dimens_0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的评价"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:drawablePadding="@dimen/dimens_8"
                    android:drawableLeft="@mipmap/ic_mine6"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_to"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_1"
                android:background="@color/color_line"/>
            <RelativeLayout
                android:id="@+id/rl_4"
                style="@style/LinearLayoutStyle"
                android:paddingTop="@dimen/dimens_16"
                android:paddingBottom="@dimen/dimens_16"
                android:layout_marginTop="@dimen/dimens_0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="线下面诊预约"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:drawablePadding="@dimen/dimens_8"
                    android:drawableLeft="@mipmap/ic_mine4"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_to"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_9"
                style="@style/LinearLayoutStyle"
                android:paddingTop="@dimen/dimens_16"
                android:paddingBottom="@dimen/dimens_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐我们"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dimens_8"
                    android:drawableLeft="@mipmap/ic_mine9"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享有奖"
                        android:textColor="#ffffffff"
                        android:textSize="12sp"
                        android:paddingTop="@dimen/dimens_5"
                        android:paddingBottom="@dimen/dimens_5"
                        android:paddingLeft="@dimen/dimens_8"
                        android:paddingRight="@dimen/dimens_8"
                        android:layout_marginRight="@dimen/dimens_10"
                        android:background="@drawable/shape_add_pratient"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_to" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_1"
                android:background="@color/color_line"/>

            <RelativeLayout
                android:id="@+id/rl_2"
                style="@style/LinearLayoutStyle"
                android:paddingTop="@dimen/dimens_16"
                android:paddingBottom="@dimen/dimens_16"
                android:layout_marginTop="@dimen/dimens_0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:drawablePadding="@dimen/dimens_8"
                    android:drawableLeft="@mipmap/ic_mine2"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_to"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_1"
                android:background="@color/color_line"/>
            <RelativeLayout
                android:id="@+id/rl_7"
                style="@style/LinearLayoutStyle"
                android:paddingTop="@dimen/dimens_16"
                android:paddingBottom="@dimen/dimens_16"
                android:layout_marginTop="@dimen/dimens_0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:drawablePadding="@dimen/dimens_8"
                    android:drawableLeft="@mipmap/ic_mine7"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_to"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>