<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <RadioGroup
        android:id="@+id/mRadioGroup"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_20">
        <RadioButton
            android:id="@+id/rdb_man"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="男"
            android:textSize="@dimen/sp_15"
            android:layout_marginRight="@dimen/dimens_20"/>
        <RadioButton
            android:id="@+id/rdb_women"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="女"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dimens_20"/>
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cancal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:paddingTop="@dimen/dimens_10"
            android:paddingRight="@dimen/dimens_20"
            android:paddingLeft="@dimen/dimens_20"
            android:paddingBottom="@dimen/dimens_10"
            android:textSize="@dimen/dimens_15"
            android:textColor="@color/color_yellow_light"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:paddingTop="@dimen/dimens_10"
            android:paddingRight="@dimen/dimens_20"
            android:paddingLeft="@dimen/dimens_20"
            android:paddingBottom="@dimen/dimens_10"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dimens_15"
            android:textColor="@color/color_yellow_light"/>
    </RelativeLayout>

</LinearLayout>