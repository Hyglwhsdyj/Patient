<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_dialog">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加急问诊说明"
            android:textColor="#ff333333"
            android:textSize="18sp"
            android:drawableLeft="@mipmap/ic_express"
            android:paddingTop="@dimen/dimens_17"
            android:textStyle="bold"
            android:paddingBottom="@dimen/dimens_17"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dimens_10"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_1"
            android:background="@color/color_line"/>
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimens_18"
            android:paddingBottom="@dimen/dimens_20"
            android:gravity="left"
            android:textColor="#ff333333"
            android:paddingLeft="@dimen/dimens_20"
            android:paddingRight="@dimen/dimens_20"
            android:textSize="15sp"
            android:text="加急问诊是爱尚中医平台为了方便急需看病的患者推出的服务，费用是该医生普通问诊费用的2倍。是否选择加急问诊服务？"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/dimens_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="不，暂时取消"
                android:paddingTop="@dimen/dimens_17"
                android:paddingBottom="@dimen/dimens_17"
                android:gravity="center"
                android:background="@drawable/shape_cancel"
                android:textColor="#ff333333"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="@dimen/dimens_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="是，我要加急"
                android:paddingTop="@dimen/dimens_17"
                android:paddingBottom="@dimen/dimens_17"
                android:gravity="center"
                android:background="@drawable/shape_ok"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>