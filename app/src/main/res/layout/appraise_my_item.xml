<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimens_20"
            android:paddingBottom="@dimen/dimens_22"
            android:paddingLeft="@dimen/dimens_15"
            android:paddingRight="@dimen/dimens_15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/dimens_50"
                android:layout_height="@dimen/dimens_50"
                android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dimens_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="徐建龙"
                        android:textColor="@color/color_main"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_serviceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff666666"
                    android:textSize="13sp"
                    android:layout_marginTop="@dimen/dimens_10"/>
            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_1"
            android:background="@color/color_line" />
        <LinearLayout
            android:id="@+id/ll_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingLeft="@dimen/dimens_15"
            android:paddingRight="@dimen/dimens_15"
            android:paddingTop="@dimen/dimens_10"
            android:paddingBottom="@dimen/dimens_10">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/tv_toApprise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    android:visibility="gone"
                    android:paddingTop="@dimen/dimens_8"
                    android:paddingBottom="@dimen/dimens_8"
                    android:paddingLeft="@dimen/dimens_16"
                    android:paddingRight="@dimen/dimens_16"
                    android:background="@drawable/shape_add_pratient"/>

                <LinearLayout
                    android:id="@+id/ll_isApprise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff333333"
                        android:textSize="13sp"
                        android:text="已评价"
                        android:paddingTop="@dimen/dimens_8"
                        android:paddingBottom="@dimen/dimens_8"
                        android:paddingLeft="@dimen/dimens_16"
                        android:paddingRight="@dimen/dimens_16"
                        android:background="@drawable/shape_cancel_order"
                        android:layout_marginLeft="@dimen/dimens_10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff333333"
                        android:textSize="13sp"
                        android:text="查看详情"
                        android:paddingTop="@dimen/dimens_8"
                        android:paddingBottom="@dimen/dimens_8"
                        android:paddingLeft="@dimen/dimens_16"
                        android:paddingRight="@dimen/dimens_16"
                        android:background="@drawable/shape_cancel_order"
                        android:layout_marginLeft="@dimen/dimens_10"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>