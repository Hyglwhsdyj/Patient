<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:background="@color/color_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="@dimen/dimens_12"
            android:paddingBottom="@dimen/dimens_18">
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/dimens_48"
                android:layout_height="@dimen/dimens_48"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_notgood1"
                android:layout_marginBottom="@dimen/dimens_7"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="失眠头疼"
                android:textColor="@color/color_main"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="@dimen/dimens_1"
            android:layout_height="match_parent"
            android:background="@color/color_line"/>
    </LinearLayout>

</LinearLayout>