<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Toolbar 消除左margin-->
    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>


    <style name="CustomDialog"></style>

    <style name="take_photo_anim"></style>

    <style name="LinearLayoutStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">@dimen/dimens_10</item>
        <item name="android:paddingTop">@dimen/dimens_10</item>
        <item name="android:paddingBottom">@dimen/dimens_10</item>
        <item name="android:paddingLeft">@dimen/dimens_15</item>
        <item name="android:paddingRight">@dimen/dimens_15</item>
    </style>

    <!--五星评分-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFF7E00</item>
        <item name="colorControlActivated">#FFFF7E00</item>
    </style>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <!--表示选中的状态，我用的是一个粉红色的爱心-->
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <!--这里的高度最好和切图保持一致-->
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="style_pop_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_out</item>
    </style>

    <style name="WarpLinearLayoutDefault">
        <item name="grivate">left</item>
        <item name="horizontal_Space">20dp</item>
        <item name="vertical_Space">20dp</item>
        <item name="isFull">false</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">10sp</item>
    </style>

    <declare-styleable name="WarpLinearLayout">
        <attr name="grivate" format="enum"><!--对齐方式 !-->
            <enum name="right" value="0"></enum>
            <enum name="left" value="1"></enum>
            <enum name="center" value="2"></enum>
        </attr>
        <attr name="horizontal_Space" format="dimension"></attr>
        <attr name="vertical_Space" format="dimension"></attr>
        <attr name="isFull" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>
